{
  "private": true,
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.1.0"
  },
  "type": "module",
  "scripts": {
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{css,json,md,yaml,yml}": "prettier --write",
    "*.{js,cjs,mjs}": [
      "./build-aux/fun biome check --apply-unsafe"
    ],
    "*.py": "./build-aux/fun black",
    "*.rs": "./build-aux/fun rustfmt --edition 2021",
    "*.blp": "./build-aux/fun blueprint-compiler format --fix",
    "*.{vala}": "./build-aux/fun uncrustify -c - --replace --no-backup --set indent_with_tabs=0 --set nl_end_of_file=force --set nl_end_of_file_min=1 --set indent_columns=4"
  }
}
